#!/bin/sh
# Open Ghostty with a specific size and title
open -n -a Ghostty --args \
  --title="Ghostty-Floating" \
  --window-save-state=never \
  --window-width=120 \
  --window-height=40 \
  -e /bin/sh -c "/opt/nvim/bin/nvim $*"

# Wait a moment for Ghostty to open and AeroSpace to apply the floating layout
sleep 0.5
/Users/mgreco/.local/bin/center-window "Ghostty-Floating"
