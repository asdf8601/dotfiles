#!/usr/bin/env bash -x
set -e
function install_absent () {
    echo Installing $1
    if ! command -v $1 &> /dev/null
    then
        ${DOTFILES}/software/$1
    fi
}

echo Cloning ohmyzsh...
${DOTFILES}/software/ohmyzsh
install_absent zsh
install_absent fzf
install_absent git-secret
install_absent glab
install_absent rust
install_absent go
install_absent gh
install_absent keepassxc
install_absent latex
install_absent conda
install_absent nvim
install_absent node
install_absent tmux
install_absent ctags
