!xterm*font: -*-mplus*-*-*-*-14-*-*-*-*-*-iso10646-1
!xrdb ~/.Xresources
!Xft.dpi: 192

! XTerm.termName: xterm-256color
XTerm.termName: xterm-256color
XTerm.vt100.locale: false
XTerm.vt100.utf8: true
XTerm.vt100.backarrowKey: false
xterm*trueColor: true
! xterm*eightBitInput: false
! XTerm.vt100.allowColorOps: true

! ! disable bold font faces, instead make text light blue.
! XTerm.vt100.colorBDMode: true
! XTerm.vt100.colorBD: rgb:82/a4/d3
! ! disable underlined text, instead make it white.
! XTerm.vt100.colorULMode: true
! XTerm.vt100.colorUL: rgb:e4/e4/e4
! ! similarly use colorIT for italics

! XTerm.ttyModes: erase ^?

XTerm.vt100.translations: #override \
    Ctrl Shift <Key> minus: smaller-vt-font() \n\
    Ctrl Shift <Key> plus: larger-vt-font() \n\
    Ctrl Shift <Key> KP_Subtract: smaller-vt-font() \n\
    Ctrl Shift <Key> KP_Add: larger-vt-font() \n\
    Ctrl Shift <Key>V: insert-selection(CLIPBOARD)

xterm*faceName: Cascadia Code PL
! xTerm*faceName: mplus Nerd Font
xterm*faceSize: 12
!  xterm*vt100*geometry: 80x50
xterm*saveLines: 100000
! xterm*boldMode: false
xterm*selectToClipboard: true

! special
*background: #1E1E2E
*foreground: #CDD6F4

! black
*color0: #45475A
*color8: #585B70

! red
*color1: #F38BA8
*color9: #F38BA8

! green
*color2: #A6E3A1
*color10: #A6E3A1

! yellow
*color3: #F9E2AF
*color11: #F9E2AF

! blue
*color4: #89B4FA
*color12: #89B4FA

! magenta
*color5: #F5C2E7
*color13: #F5C2E7

! cyan
*color6: #94E2D5
*color14: #94E2D5

! white
*color7: #BAC2DE
*color15: #A6ADC8
