#!/usr/bin/env bash
# rofi \
# 	-show drun \
# 	-modi run,drun,ssh \
# 	-scroll-method 0 \
# 	-drun-match-fields all \
# 	-drun-display-format "{name}" \
# 	-no-drun-show-actions \
# 	-terminal st \
# 	-matching fuzzy \
# 	-theme "$HOME"/.config/rofi/config/launcher.rasi
rofi \
  -show drun \
  -modi run,drun,ssh \
  -matching prefix \
  -sort -sorting-method fzf \
  -drun-match-fields name \
  -no-history \
  -no-tokenize \
  -scroll-method 0 \
  -drun-display-format "{name}" \
  -terminal st \
  -theme "$HOME/.config/rofi/config/launcher.rasi"

