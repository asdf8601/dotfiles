[takt-status]
command=takt cat 1 | tail -n1 | awk '{v=tolower($2); if(v=="in"){print "‚è≥"} else if(v=="out"){print "‚úã"} else {print $2}}'
interval=3600
border=#b63cc1

[takt-summary]
command=takt d 1 | tail -n1 | awk '{printf "%s (%s)\n", $4, $5}'
interval=600
border=#b63cc1

