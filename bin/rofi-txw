#!/usr/bin/env bash

listGitProjects () {
    # find projects using .git folder as reference
    find $HOME -type d -name '.git' -not -path "**/.git/*"  \
        | xargs -I GIT_FOLDER bash -c "realpath GIT_FOLDER/.."
}

rofi-txls () {
    # select tmux session
    # (listing  all tmux sessions)
    tmux ls -F "#{session_name}" \
    | rofi -dmenu -p "Select Tmux Session:" -a 0 -no-custom  \
    | awk '{print $1}'
}

rofi-txlw () {
    # select tmux window
    # (listing all projects)
    listGitProjects | rofi -dmenu -p "Tmux New Window:" -a 0 -no-custom  | awk '{print $1}'
}

rofi-new-txw() {
    # Creates a new window and attach it in a session
    path="$(rofi-txlw)"
    folder="$(basename $win)"
    ses="$(rofi-txls)"
    tmux new-window -c $path -t "$ses"
}

rofi-new-txw
