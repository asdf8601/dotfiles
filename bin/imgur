#!/usr/bin/env bash
[ -z "$1" ] && echo "Usage: imgur /path/to/img.png" && exit

url=$(
curl -s -X POST -H "Authorization: Client-ID $IMGUR_ID" \
    -F "image=@$1" https://api.imgur.com/3/upload \
    | jq '.data.link' \
    | tr -d '"' \
)

echo $url
notify-send "imgur" "$1 uploaded.<br>url: $url"
